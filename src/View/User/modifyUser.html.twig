{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/modifyUserProfil.css">
{% endblock %}

{% block content %}
    <div class="bg-image"></div>
    <div class="profile-container">
        <div class="modify-form-errors">
            {% for error in errorsLogs %}
                <li>{{ error }}</li>
            {% endfor %}
        </div>
        <form action="modifyUser" method="post" class="modify-form">
            <h2 class="modify-profile-title">Mes Infos</h2>
            <div class="input-container ic2">
                <label for="lastname" class="labelModify"></label>
                <input class="input" type="text" name="lastname" id="lastname" placeholder=" "
                       value="{{ user.lastname }}" required>
            </div>
            <div class="input-container ic2">
                <label for="firstname" class="labelModify"></label>
                <input class="input" type="text" name="firstname" id="firstname" placeholder=" "
                       value="{{ user.firstname }}" required>
            </div>
            <div class="input-container ic2">
                <label for="email" class="labelModify"></label>
                <input class="input" type="email" name="email" id="email" placeholder=" "
                       value="{{ user.email }}" required>
            </div>
            <h2 class="subtitle">Infos de ma Belle-m√®re</h2>
            <div class="input-container ic2">
                <label for="lastname" class="labelModify"></label>
                <input class="input" type="text" name="stepmomLastname" id="stepmomLastname" placeholder=" "
                       value="{{ stepmom.lastname }}" required>
            </div>
            <div class="input-container ic2">
                <label for="firstname" class="labelModify"></label>
                <input class="input" type="text" name="stepmomFirstname" id="stepmomFirstname" placeholder=" "
                       value="{{ stepmom.firstname }}" required>
            </div>
            <div class="input-container">
                <button type="submit" name="submit" class="submit">Modifier mon profil</button>
                <button type="submit" name="submit" class="submit"><a href="/">Accueil</a></button>
            </div>
        </form>
    </div>
{% endblock %}
